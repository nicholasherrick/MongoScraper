<div class="mt-4 mb-3" data-id="{{_id}}">
    <h3>{{title}}</h3>
    <a href="https://thehill.com{{link}}" target="_blank"><button type="button" class="btn btn-info">Go To Article</button></a>
    {{#if user}}
        <button data-id="{{_id}}" type="button" class="save-button btn btn-warning">Save Article</button>
        <button data-id="{{_id}}" type="button" class="save-forum-button btn btn-dark">Discuss This Article</button>
    {{/if}}
    <hr>
</div>